{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build/",
        "target": "es2019",
        "strict": false,
    },
    "include": [
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "test/**/*.spec.ts"
    ]
}